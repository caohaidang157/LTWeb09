<div class="product-group">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 card mr-2 mt-2 text-center">
                <div class="product-card">
                    <img src="~/Content/images/@item.AnhBia" alt="Alternate Text" style="width:300px;height:350px;" class="card-img-top mt-2" />
                    <div class="card-body">
                        <h5 style="font-size:30px;" class="card-title">@item.TenSach</h5>
                        @Html.ActionLink("Chi tiết", "Details", "Home", new { id = item.MaSach }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Chọn", "Details", "Home", new { id = item.MaSach }, new { @class = "btn btn-warning" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>